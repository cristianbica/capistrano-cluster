<%= environment %>:
  adapter: <%= adapter %>
  host: <%= hostname.properties.private_ip || hostname %>
  database: <%= name %>
  username: <%= username %>
  password: <%= password %>
  encoding: <%= encoding || "utf-8" %>
  reconnect: true
  <%options.each_pair do |attribute,value| %><%= attribute %>: <%= value %>
  <%end%>

